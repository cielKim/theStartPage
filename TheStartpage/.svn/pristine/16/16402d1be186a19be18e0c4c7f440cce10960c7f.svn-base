/* config checkbox */
.checkbox.custom {
  float: left;
  margin: 0;
  margin-left:10px;
  margin-top:2px;
  padding: 0;
  display: block;
  width: 100%;
}

input[type="checkbox"].custom {
  margin-left: 0;
  padding: 0;
}

input[type=checkbox].css-checkbox {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0px;
  border: 0;
}

input[type=checkbox].css-checkbox+label.css-label{
  padding-left: 20px;
  height: 20px;
  display: inline-block;
  line-height: 10px;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 15px;
  vertical-align: middle;
  cursor: pointer;
  opacity: 1;
}

input[type=checkbox].css-checkbox+label.css-label:hover{
/*   opacity: 0.5; */ /* 선택적 사용 */
}

input[type=checkbox].css-checkbox:checked+label.css-label{
  background-position: 0 -20.6px;
}

.css-label {
  background-image: url(/TheStartpage/resources/img/config/check5.png);
  background-size:20px;
}

/* itbookbest/projectfinder/twitter option checkbox */
.optionbox.optioncustom {
  float: left;
  margin: 0;
  margin-left:20px;
  margin-top:3px;
  padding: 0;
  display: block;
  width: 100%;
}

input[type="checkbox"].optioncustom {
  margin-left: 0;
  padding: 0;
}

input[type="radio"].optioncustom {
  margin-left: 0;
  padding: 0;
}

input[type=checkbox].itbookbest-option, input[type=checkbox].projectfinder-option {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0px;
  border: 0;
}

input[type=radio].twitter-option {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0px;
  border: 0;
}

input[type=checkbox].itbookbest-option+label.css-optionlabel, input[type=checkbox].projectfinder-option+label.css-optionlabel{
  padding-left: 20px;
  height: 14px;
  display: inline-block;
  line-height: 10px;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 15px;
  vertical-align: middle;
  cursor: pointer;
  opacity: 1;
}

 input[type=radio].twitter-option+label.css-optionlabel{
  padding-left: 20px;
  height: 14px;
  display: inline-block;
  line-height: 10px;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 15px;
  vertical-align: middle;
  cursor: pointer;
  opacity: 1;
}

input[type=checkbox].itbookbest-option+label.css-optionlabel:hover{
	opacity: 0.5; /* 선택적 사용 */
}

input[type=checkbox].projectfinder-option+label.css-optionlabel:hover{
	opacity: 0.5; /* 선택적 사용 */
}

input[type=radio].twitter-option+label.css-optionlabel:hover{
	opacity: 0.5; /* 선택적 사용 */
}

input[type=checkbox].itbookbest-option:checked+label.css-optionlabel{
  background-position: 0 -14px;
}

input[type=checkbox].projectfinder-option:checked+label.css-optionlabel{
  background-position: 0 -14px;
}

input[type=radio].twitter-option:checked+label.css-optionlabel{
  background-position: 0 -14px;
}

.css-optionlabel {
  background-image: url(/TheStartpage/resources/img/config/check6.png);
  background-size:14px;
}



